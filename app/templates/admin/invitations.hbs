<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |invitation|}}
    <tr>
      <td>{{invitation.id}}</td>
      <td>{{invitation.email}}</td>
      <td><button class="btn btn-xs btn-danger" {{action 'deleteInvitation' invitation}}> Delete </button></td>
    </tr>

    {{/each}}
  </tbody>
</table>